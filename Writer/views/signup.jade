extends ./layouts/signupLayout
include ../public/stylesheets/signup.css

block content
    h1= title
    div(class="form_div")
        p(class="form_identifier") First Name
        input(type="email", name="email" class="form_input")
        p(class="form_identifier") Last Name
        input(type="email", name="email" class="form_input")
        p(class="form_identifier") Email
        input(type="email", name="email" class="form_input")
        p(class="form_identifier") Gender
        select(name="gender" class="form_input")
            option Male
            option Female
        p(class="form_identifier") Date of Birth
        input(type="date", name="date_of_birth" class="form_input")
        p(class="form_identifier") Password
        input(type="password", name="password", class="form_input")
        p(class="form_identifier") Confirm Password
        input(type="password", name="confirm_password", class="form_input")
        p
        button(value="signUp", name="signUp") Sign Up